# Production Environment Variables
# These are build-time variables for static export

# Application Info
NEXT_PUBLIC_APP_NAME="Suara"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV="production"

# Azure Configuration
NEXT_PUBLIC_AZURE_STORAGE_ACCOUNT="productionsuara"
NEXT_PUBLIC_AZURE_REGION="southeastasia"

# API Endpoints (update when backend is ready)
# NEXT_PUBLIC_API_BASE_URL="https://api.suara.com"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true

# Performance
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# Build Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
